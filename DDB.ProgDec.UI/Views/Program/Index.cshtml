@model IEnumerable<DDB.ProgDec.BL.Models.Program>

@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="Insert">Insert New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/@item.ImagePath"
                    id="programimage"
                    alt="@item.Description"
                    onclick="on('/images/@item.ImagePath')"
                    class="imagepropsmall"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
               <a asp-action="Details" asp-route-id="@item.Id">Details</a>
               <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
               <br />
               <a asp-action="Update" asp-route-id="@item.Id">Update</a>
               <a asp-action="GetOne" asp-route-id="@item.Id">Get One</a>
               <a asp-action="Remove" asp-route-id="@item.Id">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
